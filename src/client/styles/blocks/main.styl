.main
	padding 68px 56px 176px 56px

	&__container
		position relative
		height 600px
		display block
		padding 68px 24px 176px 56px;
		background-image url('/images/main_banner.png')
		background-repeat no-repeat
		background-size cover
		border 1px solid white
		border-radius 45px 45px 0 0

	&__subtitle
		margin: 0
		margin-top 68px
		font-weight 400
		font-size 16px
		line-height 24px
		align-items center
		letter-spacing 0.03em
		text-transform uppercase
		color rgba(255, 255, 255, 0.5)

	&__title
		margin 0
		margin-top 8px
		font-weight 400
		font-size 56px
		line-height 64px
		letter-spacing 0.02em
		text-transform uppercase
		color: #FFFFFF
		
	&__descr
		margin: 0
		margin-top 24px
		font-style normal
		font-weight 300
		font-size 16px
		line-height 64px
		letter-spacing -0.01em
		text-transform uppercase
		color #FFFFFF

	&__btn
		margin-top 22px
		align-items center
		padding 12px 32px
		width 195px
		height 56px
		background #FFFFFF
		border 1px solid #FFFFFF
		border-radius 0px 20px 20px 32px
		font-style normal
		font-weight 600
		font-size 16px
		line-height 20px
		letter-spacing 0.05em
		align-items center
		text-transform uppercase
		color #000000

		&:hover
			opacity 0.7

	&__top-bar
		position absolute
		top -1px
		right -1px
		background-color #000
		padding 18px 30px
		border-left 1px solid white
		border-bottom 1px solid white
		border-radius 0 0 0 30px

		&::before
			z-index 2
			content ""
			width 100px
			height 35px
			position absolute
			top 0
			left -101px
			border-top 1px solid #fff
			border-right 1px solid #fff
			border-radius 0 30px 0 0

		&::after
			z-index 2
			content ""
			width 35px
			height 100px
			position absolute
			bottom -101px
			right 0
			border-top 1px solid #fff
			border-right 1px solid #fff
			border-radius 0 30px 0 0

		.top-box
			width 32px
			height 32px
			background-color #000
			position absolute
			top 0
			left -32px

			&::before
				content ''
				width 32px
				height 32px
				background-color #000
				position absolute
				top 62px
				right -374px

	&__bottom-bar
		position absolute
		bottom -1px
		right -1px
		background-color #000
		padding 19px 39px
		border-left 1px solid #fff
		border-top 1px solid #fff
		border-radius 30px 0 0 0

		&::before
			z-index 2
			content ""
			width 100px
			height 35px
			position absolute
			bottom 0
			left -101px
			border-bottom 1px solid #fff
			border-right 1px solid #fff
			border-radius 0 0 30px 0

		&::after
			z-index 2
			content ""
			width 35px
			height 100px
			position absolute
			top -101px
			right 0
			border-bottom 1px solid #fff
			border-right 1px solid #fff
			border-radius 0 0 30px 0

		.bottom-box
			width 32px
			height 32px
			position absolute
			bottom 0
			left -32px
			background radial-gradient(circle at left top, transparent 32px, #000 32px)

			&::before
				content ''
				width 32px
				height 32px
				background radial-gradient(circle at left top, transparent 32px, #000 32px)
				position absolute
				bottom 64px
				right -362px

		img 
			cursor pointer

			&:hover
				opacity 0.7

	&__logo
		position absolute
		width 80px
		height 80px
		bottom 88px
		right 38px
		

	&__panel-controls
		position absolute
		display flex
		align-items center
		justify-content center
		bottom 0
		left 50%

		button
			position absolute
			padding 0
			border none
			font inherit
			color inherit
			background transparent
			display flex
			align-items center
			border 1px solid #fff
			background-color black
			cursor pointer

			img
				&:hover
					opacity 0.7

		.arrow-left
			padding 6px 20px 6px 12px
			border-radius 30px 0 0 30px
			right: 22px

		.center-btn
			z-index 2
			width 64px
			height 64px
			justify-content center
			padding 19px
			border-radius 50%
			
		.arrow-right
			padding 6px 12px 6px 20px
			border-radius 0 30px 30px 0
			left 22px