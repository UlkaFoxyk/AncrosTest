nav
	width 100% 
	position relative
	display flex
	justify-content center
	border-bottom 1px solid #fff
	align-items center

	.navigation
		display flex
		justify-content space-between
		align-items center
		list-style-type none

		&__item
			text-transform uppercase
			font-size 15px
			font-weight 350
			letter-spacing 0.05em
			color #fff
			text-decoration none
			padding 8px 16px

			a
				color #fff
				text-decoration none

			a:hover
				opacity 0.7

			&-active
				position relative
				padding 5px 25px
				text-align center
				font-size 34px
				font-weight 500
				letter-spacing 0.05em
				margin-left 136px
				margin-right 156px
				border 1px solid #fff
				border-radius 22px 22px 0 0
				border-bottom 1px solid #111

				&::before
					z-index 2
					content ''
					position absolute
					margin 0
					bottom -1px
					left -47px
					background-color #000
					padding 12px 23px
					border-right 1px solid #fff
					border-bottom 1px solid #fff
					border-radius 0 0 20px 0

				&::after
					z-index 2
					content ''
					position absolute
					margin 0
					bottom -1px
					right -47px
					background-color #000
					padding 12px 23px
					border-left 1px solid #fff
					border-bottom 1px solid #fff
					border-radius 0 0 0 20px

				.box__decor
					display block
					position absolute
					width 32px
					height 20px
					bottom -2px
					left -19px
					background-color black

					&::before
						content ''
						position absolute
						width 32px
						height 20px
						bottom -2px
						left 297px
						background-color black

		&-left
			justify-content space-between
			
		&-center
			margin-bottom -1px
